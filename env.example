# Hugging Face OpenAI-Compatible Endpoint
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_BASE_URL=https://router.huggingface.co/v1
HUGGINGFACE_MODEL=meta-llama/Meta-Llama-3-8B-Instruct

# Serper.dev Configuration (for web search)
SERPER_API_KEY=your_serper_api_key_here

# Neon PostgreSQL Configuration (for vector database)
# Option 1: Use connection string (recommended)
NEON_DATABASE_URL=postgresql://username:password@host:port/database

# Option 2: Use individual components
# NEON_DATABASE_HOST=your-neon-host.neon.tech
# NEON_DATABASE_PORT=5432
# NEON_DATABASE_NAME=factcheck_db
# NEON_DATABASE_USER=your_username
# NEON_DATABASE_PASSWORD=your_password

# Vector Database Configuration
VECTOR_SIMILARITY_THRESHOLD=0.65
MAX_VECTOR_RESULTS=3
ENABLE_VECTOR_SEARCH=true
ENABLE_VECTOR_STORAGE=true

# Application Configuration
APP_NAME=FactCheck AI Backend
APP_VERSION=1.0.0
ENVIRONMENT=development

# Security & Production Configuration
# CORS_ORIGINS can be set as:
# 1. JSON array: CORS_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.com"]
# 2. Comma-separated: CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
CORS_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.com"]
API_KEY_HEADER=X-API-Key
API_KEY=changeme123
RATE_LIMIT_PER_MINUTE=60

# Logging Configuration
LOG_LEVEL=INFO 